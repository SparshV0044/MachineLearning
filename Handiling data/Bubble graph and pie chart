####   Pie Chart  ####
 data = [3,7,5,6,8]
 plt.pie(data)
 plt.show()
 
 
 ex = (0,0,1,0,0,0) =>explode-> separate the piece with value 1
 lb = ["a","b","c","d","e"] =>Labels
 
 plt.pie(data , labels = lb , explode = ex , shadow = true)
